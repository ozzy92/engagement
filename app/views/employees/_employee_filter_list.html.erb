<div class="container-fluid">
  <div class="row my-2">
    <h4 class="col-6"><%= title %></h4>
    <div class="col-6 text-right">
      <%= form_tag employees_path, method: :get, remote: true do %>
        <%= hidden_field_tag :actions, actions %>
        <%= label_tag :filter %>
        <%= text_field_tag :filter %>
        <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-2 font-weight-bold">First Name</div>
    <div class="col-2 font-weight-bold">Last Name</div>
    <div class="col-3 font-weight-bold">Email</div>
    <div class="col-3 font-weight-bold">Position</div>
    <div class="col-2"></div>
  </div>
</div>
<div id="employee_list">
  <%= render 'employees/employee_list', actions: actions %>
</div>
