<%= render 'home/header' %>
<h4 class="m-2">Engagement Requests</h4>
<div class="container-fluid">
  <div class="row">
    <div class="col-2 font-weight-bold">Id</div>
    <div class="col-4 font-weight-bold">Name</div>
    <div class="col-3 font-weight-bold">Type</div>
    <div class="col-2 font-weight-bold">Status</div>
    <div class="col-1 font-weight-bold">Actions</div>
  </div>
  <% @engagement_requests.each do |engagement| %>
    <div class="row my-1">
      <div class="col-2"><%= engagement.engagement_id %></div>
      <div class="col-4"><%= engagement.project_name %></div>
      <div class="col-3"><%= EngagementRequest::ENGAGEMENT_TYPES[engagement.engagement_type] %></div>
      <div class="col-2"><%= EngagementRequest::STATUSES[engagement.status] %></div>
      <div class="col-1"><%= link_to 'View', engagement %></div>
    </div>
  <% end %>
</div>
